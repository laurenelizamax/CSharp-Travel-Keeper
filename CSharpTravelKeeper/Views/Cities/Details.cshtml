@model CSharpTravelKeeper.Models.City

@{
    ViewData["Title"] = "Details";
}

<h3>City Details</h3>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CityName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CityName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
           Lodging
        </dt>
        <dd class="col-sm-10">
            @foreach (var item in Model.Lodgings)
            {
            <div>
               Name: @Html.DisplayFor(modelItem => item.LodgingName) &nbsp;
               Website: @Html.DisplayFor(modelItem => item.LodgingWebsite) &nbsp;
               Description: @Html.DisplayFor(modelItem => item.Description) &nbsp;

            </div>
            }
        </dd>
        <dt class="col-sm-2">
            Activities
        </dt>
        <dd class="col-sm-10">
            @foreach (var item in Model.ActivityEvents)
            {
            <div>
               Name: @Html.DisplayFor(modelItem => item.ActivityName) &nbsp;
               Website: @Html.DisplayFor(modelItem => item.ActivityWebsite) &nbsp;
               Description: @Html.DisplayFor(modelItem => item.Description) &nbsp;

            </div>
            }
        </dd>
        <dt class="col-sm-2">
            Transportation
        </dt>
        <dd class="col-sm-10">
            @foreach (var item in Model.Transports)
            {
            <div>
              Name:  @Html.DisplayFor(modelItem => item.TransportTitle) &nbsp;
              Notes:  @Html.DisplayFor(modelItem => item.Notes) &nbsp;

            </div>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Delete" asp-route-id="@Model.Id">Delete</a> |
    <a asp-action="Index" asp-controller="Trips">Back to Trips</a>
</div>
