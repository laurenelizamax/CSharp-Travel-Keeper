@model CSharpTravelKeeper.Models.City

@{
    ViewData["Title"] = "Edit City";
}

    <div>
        <img class="editImage" src="~/images/editCity.jpg" alt="beach">
    </div>
<br />
<br />
<div class="container">
    <div class="col-5">
        <div class="card editCityForm">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-5">
                        <h3>E d i t  &nbsp; C i t y</h3>
                        <br />
                        <br />
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="Id" />
                            <div class="form-group">
                                <label asp-for="CityName" class="control-label"></label>
                                <input asp-for="CityName" class="form-control" />
                                <span asp-validation-for="CityName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description" class="control-label"></label>
                                <input asp-for="Description" class="form-control" />
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label>Trip</label>
                                <select asp-for="TripId" class="form-control" asp-items="ViewBag.TripId"></select>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Save" class="btn btn-outline-dark" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div>
    <a class="btn btn-outline-dark" asp-action="Details" asp-controller="Trips" asp-route-id="@Model.TripId">Back to Trip Details</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
