@model CSharpTravelKeeper.Models.City

@{
    ViewData["Title"] = "Create";
}


<div>
    <img class="editImage" src="~/images/city.jpg" alt="beach">
</div>
<br />
<br />
<div class="container">
    <div class="col-5">
        <div class="card addCity">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-5">
                        <h3>A d d &nbsp; A &nbsp; C i t y</h3>
                        <br />
                        <br />
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="CityName" class="control-label"></label>
                                <input asp-for="CityName" class="form-control" />
                                <span asp-validation-for="CityName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description" class="control-label"></label>
                                <input asp-for="Description" class="form-control" />
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label>Trip</label>
                                <select asp-for="TripId" class="form-control" asp-items="ViewBag.TripId"></select>
                            </div>
                            <div>
                                <input asp-for="IsActive" type="hidden" value="true" />
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-outline-dark" />
                            </div>
                        </form>
                    </div>
                </div>


            </div>
        </div>
    </div>
    <div>
        <br />
        <br />

        <a class="btn btn-outline-dark" asp-action="Index" asp-controller="Trips">Back to Trips</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
