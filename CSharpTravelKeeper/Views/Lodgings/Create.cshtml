@model CSharpTravelKeeper.Models.Lodging

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Lodging</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LodgingName" class="control-label"></label>
                <input asp-for="LodgingName" class="form-control" />
                <span asp-validation-for="LodgingName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LodgingWebsite" class="control-label"></label>
                <input asp-for="LodgingWebsite" class="form-control" />
                <span asp-validation-for="LodgingWebsite" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CityId" class="control-label"></label>
                <select asp-for="CityId" class ="form-control" asp-items="ViewBag.CityId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Cities">Back to Cities</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
