@model CSharpTravelKeeper.Models.Lodging

@{
    ViewData["Title"] = "Delete";
}

<div>
    <img class="editImage" src="~/images/deletelodging.jpg" alt="beach">
</div>
<br />
<br />
<div class="container">
    <div class="col-5">
        <div class="card deleteLodgingForm">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-7">
                        <h3>D e l e t e &nbsp; L o d g i n g</h3>
                        <br />
                        <dl class="row">
                            <dt class="col-sm-6">
                                @Html.DisplayNameFor(model => model.LodgingName)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.LodgingName)
                            </dd>
                            <dt class="col-sm-6">
                                @Html.DisplayNameFor(model => model.Description)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Description)
                            </dd>
                        </dl>

                        <form asp-action="Delete">
                            <input type="hidden" asp-for="Id" />
                            <input type="submit" value="Delete" class="btn btn-outline-dark" /> 
                            <a class="btn btn-outline-dark" asp-action="Details" asp-controller="Cities" asp-route-id="@Model.CityId">Back to City Details</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
